/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.user_head{
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
}

.user{
  font-size: 30rpx;
  opacity: 0.6;
  margin-left: 10rpx;
}

.review_item_view{
  width: 200rpx;
  height: 300rpx;
}

.review_item_view_img{
  width: 200rpx;
  height: 300rpx;
}

.review_item_text{
  width: 100%;
  margin: 60rpx;
}

review_item_title{
  display: flex;
  font-weight: bold;
  height: 200rpx;
  align-items: center;
}

.user_line{
  display: flex;
}